<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="6dp">

    <ImageView
        android:id="@+id/quest_item_type_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="12dp"
        android:background="#000000"
        android:layout_alignParentLeft="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="9dp"
        android:layout_toRightOf="@id/quest_item_type_image"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/quest_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="name quest"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/quest_item_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type quest text"
            />

        <TextView
            android:id="@+id/quest_item_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="16sp"
            android:text="Progress quest%" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/quest_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        />


</RelativeLayout>