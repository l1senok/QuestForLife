<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:id="@+id/quest_type_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#000000"/>


            <TextView
                android:id="@+id/quest_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="name quest"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/quest_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type quest text"/>

            <TextView
                android:id="@+id/quest_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:textSize="16sp"
                android:text="Progress quest%" />

        <CheckBox
            android:id="@+id/quest_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comlete"/>


</LinearLayout>